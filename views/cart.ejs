  <section class="menu" id="menu">

    <div class="box-container menu">

      <div class="box">

        <div class="content" style="font-size: large; padding: 20px;">
          <% var finalBill=0;%>

            <% for(let i=0; i<itemName.length; i++) { %>


              <h3 style="padding-top: 20px; padding-right: 20px; padding-left: 20px; padding-bottom: 10px; background-color: black; border-color: white; border: solid; border-radius: 20px; color: white;">

                <form action="/remove-from-cart" method="POST" style="padding-left: 50px;">
                  <%= itemName[i] %>: <%= quantity[i] %> x <%= itemPrice[i] %>
                  <input type="hidden" name="itemName" value="
            <%= itemName[i] %>
            " />
                  <input type="hidden" name="itemPrice" value="
            <%= itemPrice[i] %>
            " />
                  <input type="hidden" name="quantity" value="1" min="1" />
                  <button type="submit" style="color: white; background-color: red; padding: 7px; border-radius: 4px;">
                    X
                  </button>
                </form>
              </h3>
              <% finalBill=finalBill + itemPrice[i] %>




                <% } %>


        </div>
      </div>
    </div>

  </section>

  <div class="box">
